{
    "extends": "eslint:recommended",
    "rules": {
        "consistent-return": 2,
        "indent": [
            1,
            4
        ],
        "no-unused-vars": [
            "error", 
            { 
                "args": "none" 
            }
        ],
        "no-else-return": 1,
        "semi": [
            1,
            "always"
        ],
        "space-unary-ops": 2,
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "lf",
                "semi": true,
                "singleQuote": false,
                "tabWidth": 4,
                "trailingComma": "es5"
            }
        ]
    },
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env":{
        "browser" : true,
        "node": true
    }
}